<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.model.CommentMapper">

    <!-- 댓글 추가 -->
    <insert id="insertComment" parameterType="com.smhrd.model.Comment">
        INSERT INTO COMMENTS (COMMENT_ID, MEM_ID,
        COMMENT_CONTENT, COMMENT_DATE,
        buddy_idx)
        VALUES (#{comment_id},
        #{mem_id}, #{comment_content}, sysdate, #{buddy_idx})
    </insert>

    <!-- 대댓글 추가 -->
    <insert id="insertChildComment" parameterType="com.smhrd.model.Comment">
        INSERT INTO COMMENTS (COMMENT_ID, MEM_ID,
        COMMENT_CONTENT, COMMENT_DATE,
        parent_comment_id, buddy_idx)
        VALUES (#{comment_id},
        #{mem_id}, #{comment_content}, sysdate,
        #{parent_comment_id}, #{buddy_idx})
    </insert>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM COMMENTS WHERE COMMENT_ID = #{commentId}
    </delete>

    <!-- 특정 글에 대한 댓글 목록 조회 -->
    <select id="getCommentsByBuddyIdx" parameterType="int" resultType="com.smhrd.model.Comment">
        SELECT * FROM COMMENTS WHERE BUDDY_IDX = #{buddy_idx}
    </select>

    <!-- 특정 부모 댓글에 대한 대댓글 목록 조회 -->
    <select id="getChildCommentsByParentCommentId" parameterType="int" resultType="com.smhrd.model.Comment">
        SELECT * FROM COMMENTS WHERE PARENT_COMMENT_ID = #{parentCommentId}
    </select>

</mapper>
