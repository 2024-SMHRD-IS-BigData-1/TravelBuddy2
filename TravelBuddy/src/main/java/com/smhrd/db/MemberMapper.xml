<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.db.MemberMapper">
  
  <insert id = "join" parameterType="Member">
    insert into Members(MEM_ID, MEM_PW, MEM_NAME, MEM_BIRTHDATE, MEM_GENDER, MEM_PHONE, MEM_EMAIL) 
values(#{id},#{pw},#{name},#{birthdate},#{gender},#{phone} ,#{email})
  </insert>
  
  <select id = "Login" parameterType="Member" resultType="Member">
    select * from web_memeber where id=#{id} and pw=#{pw} 
  </select>
  
  <update id="update" parameterType = "Member">
    update web_member set pw=#{pw}, phone=#{phone}
  	where id=#{id}
  </update>
  
  <select id="memberList" resultType="Member">
	select * from web_member where not(id='admin')  
  </select>
  
  <delete id = "deleteMember" parameterType="String" >
     delete from web_member where id=#{id}
  </delete>
  
  <select id = "idCheck" parameterType="String" resultType="Member">
     select * from web_member where id=#{id}
  </select>
  
  </mapper>
  